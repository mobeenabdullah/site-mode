{
	"apiVersion": 2,
	"name": "site-mode/login-form",
	"title": "Login Form",
	"category": "widgets",
	"icon": "lock",
	"description": "A login form block for the site mode.",
	"supports": {
		"html": false
	},
	"textdomain": "site-mode",
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css",
	"attributes": {
		"labelUsername": {
			"type": "string",
			"default": "Username"
		},
		"labelPassword": {
			"type": "string",
			"default": "Password"
		},
		"labelSubmit": {
			"type": "string",
			"default": "Login"
		},
		"showRememberMe": {
			"type": "boolean",
			"default": true
		},
		"rememberMeLabel": {
			"type": "string",
			"default": "Remember Me"
		},
		"defaultRememberMe": {
			"type": "boolean",
			"default": false
		},
		"loggedInBehaviour": {
			"type": "string",
			"default": "redirect"
		},
		"colors": {
			"type": "object",
			"default": {
				"inputLabel": "#000000",
				"inputBorder": "#000000",
				"inputBackground": "#ffffff",
				"buttonBackground": "#000000",
				"buttonText": "#ffffff",
				"buttonBorder": "#000000",
				"headingText": "#000000"
			}
		}
	}
}
